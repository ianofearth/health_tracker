<li id="exercise_item_<%= exercise.id %>">
  <p><%= exercise.name %></p>
  <p><%= exercise.burned %></p>
  <%= link_to "Edit", edit_user_exercise_path(@user, exercise), id: "edit_exercise_link", remote: true %> | 
  <%= link_to "Remove", user_exercise_path(@user, exercise), id: "delete_exercise_link", remote: true, data: {method: 'delete', confirm:'are you sure?'} %>
</li>
